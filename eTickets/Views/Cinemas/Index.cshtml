@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinamas";

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title></title>
</head>
<body>
    <div class="row">
    <div class="col-md-8 offset-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var actor in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@actor.Logo" alt="@actor.Name" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => actor.Description)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</body>

</html>

